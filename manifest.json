{
  "name": "Turntable Plus",
  "version": "0.2.14",
  "manifest_version": 2,
  "description": "Add abilities to turntable.fm that you thought were missing!",
  "icons": {
      "16": "images/ttp_icon16.png",
      "48": "images/ttp_icon48.png",
      "128": "images/ttp_icon128.png"
  },
  "browser_action": {
    "default_icon": "images/ttp_icon.png",
    "default_title": "Turntable Plus",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "idle",
    "notifications",
    "*://turntable.fm/"
  ],
  "web_accessible_resources": [
    "scripts/onPage.js",
    "styles/ttp.css",
    "images/animationOn.png",
    "images/banner-bg.png",
    "images/banner-listeners.png",
    "images/banner-logo.png",
    "images/boot.png",
    "images/boot-hover.png",
    "images/dj-icon.png",
    "images/downarrow.png",
    "images/fan.png",
    "images/fan-active.png",
    "images/fan-hover.png",
    "images/fanned.png",
    "images/heart.png",
    "images/ignore.png",
    "images/ignore-active.png",
    "images/ignore-hover.png",
    "images/mod.png",
    "images/mod-active.png",
    "images/mod-hover.png",
    "images/mod-icon.png",
    "images/noAnimation.png",
    "images/profile.png",
    "images/profile-hover.png",
    "images/remove-dj.png",
    "images/remove-dj-hover.png",
    "images/script-add.png",
    "images/script-remove.png",
    "images/super-icon.png",
    "images/ttdash.png",
    "images/ttdash-active.png",
    "images/ttdash-hover.png",
    "images/uparrow.png"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "options_page": "settings.html",
  "homepage_url": "http://turntableplus.fm/beta",
  "update_url": "http://turntableplus.fm/update.xml"
}
